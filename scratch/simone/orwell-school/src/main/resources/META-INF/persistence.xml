<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.gaia.hackathon.data.entity.Buildings</class>
        <class>com.gaia.hackathon.data.entity.Events</class>
        <class>com.gaia.hackathon.data.entity.FaceScanLog</class>
        <class>com.gaia.hackathon.data.entity.Family</class>
        <class>com.gaia.hackathon.data.entity.Parents</class>
        <class>com.gaia.hackathon.data.entity.Persons</class>
        <class>com.gaia.hackathon.data.entity.Registration</class>
        <class>com.gaia.hackathon.data.entity.Strangers</class>
        <class>com.gaia.hackathon.data.entity.Students</class>
        <class>com.gaia.hackathon.data.entity.Staff</class>
        <class>com.gaia.hackathon.data.entity.Rooms</class>
        <validation-mode>NONE</validation-mode>
        <properties>
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:6000/postgres"/>
            <property name="javax.persistence.jdbc.user" value="simone"/>

            <!-- The docker version of SQL requires a strong password. Uncomment this line to test the app against it -->
            <!--			<property name="javax.persistence.jdbc.password" value="Alfonso_1935"/>-->
            <property name="javax.persistence.jdbc.password" value="password"/>

            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>

    </persistence-unit>
</persistence>
