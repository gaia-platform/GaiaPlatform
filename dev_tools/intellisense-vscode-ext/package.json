{
    "name": "gaia-platform",
    "displayName": "Gaia Platform Intellisense",
    "description": "Intellisense for Gaia Platform",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ruleset",
        "onLanguage:ddl"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "ruleset",
                "aliases": [
                    "ruleset"
                ],
                "extensions": [
                    ".ruleset"
                ],
                "configuration": "./language-configurations/ruleset-language-configuration.json"
            },
            {
                "id": "ddl",
                "aliases": [
                    "ddl"
                ],
                "extensions": [
                    ".ddl"
                ],
                "configuration": "./language-configurations/ddl-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ruleset",
                "scopeName": "source.cpp.ruleset",
                "path": "./syntaxes/ruleset.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.preprocessor.macro.contents": "cpp"
                }
            },
            {
                "language": "ddl",
                "scopeName": "source.ddl",
                "path": "./syntaxes/ddl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ruleset",
                "path": "./snippets/ruleset.json"
            },
            {
                "language": "ddl",
                "path": "./snippets/ddl.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/node": "^16.7.4",
        "typescript": "^4.4.2"
    }
}
