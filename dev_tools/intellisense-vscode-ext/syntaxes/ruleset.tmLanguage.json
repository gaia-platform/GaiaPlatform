{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.cpp.ruleset",
  "name": "ruleset",
  "fileTypes": [
    "ruleset"
  ],
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "source.cpp"
    }
  ],
  "repository": {
    "keywords": {
			"patterns": [
				{
					"name": "keyword.other.cpp.ruleset",
					"match": "\\bruleset ([a-zA-Z0-9_.-]*)\\b",
					"captures": {
						"1": {
							"name": "support.class.cpp.ruleset"
						}
					}
				}
			]
		}
  }
}
