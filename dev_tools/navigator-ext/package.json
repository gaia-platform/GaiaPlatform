{
    "name": "gaia-navigator-extension",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.47.0"
    },
    "publisher": "Gaia Platform",
    "activationEvents": [
        "onView:databases"
    ],
    "main": "./build/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "databases.showRecords",
                "title": "Display Records",
                "icon": {
                    "light": "resources/light/boolean.svg",
                    "dark": "resources/dark/boolean.svg"
                }
            },
            {
                "command": "databases.showRelatedRecords",
                "title": "Display Related Records",
                "icon": {
                    "light": "resources/light/boolean.svg",
                    "dark": "resources/dark/boolean.svg"
                }
            },
            {
                "command": "databases.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "viewsWelcome": [
            {
                "view": "databases",
                "contents": "A Gaia Database Server was not found.\n"
            }
        ],
        "views": {
            "gaia-explorer": [
                {
                    "id": "databases",
                    "name": "Databases"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gaia-explorer",
                    "title": "Gaia Explorer",
                    "icon": "resources/gaia_logo.png"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "databases.refreshEntry",
                    "when": "view == databases",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "databases.showRecords",
                    "when": "view == databases && viewItem == table",
                    "group": "inline"
                }
            ]
        }
    },
    "dependencies": {
        "@vscode/webview-ui-toolkit": "^1.0.0",
        "react": "^18.0.0",
        "react-data-grid": "^7.0.0-beta.11",
        "react-dom": "^18.0.0",
        "vscode": "^1.1.37"
    },
    "resolutions": {
        "terser": "3.14.1"
    },
    "watch": {
        "build": {
            "patterns": [
                "ext-src"
            ],
            "extensions": [
                ".ts",
                ".tsx",
                ".css"
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "watch": "npm-run-all -p watch:*",
        "compile:extension": "tsc -p ./",
        "compile:views": "webpack --mode development",
        "watch:extension": "tsc --watch -p ./",
        "watch:views": "webpack --watch --mode development",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test:": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@svgr/webpack": "^6.2.1",
        "@types/node": "^10.17.60",
        "@types/react": "^16.14.24",
        "@types/react-dom": "^16.9.14",
        "css-loader": "^6.7.1",
        "npm-run-all": "^4.1.5",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.2.8",
        "typescript": "^3.3.1",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
