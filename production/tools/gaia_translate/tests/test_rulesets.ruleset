ruleset test_insert_delete_1
{
    on_update(S:student)
    {
        // This is a technique for deleting members of an iteration.
        // It restarts the iterator after obtaining each first member.
        bool deleted;
        do
        {
            deleted = false;
            for (/R:registration)
            {
                R.remove();
                deleted = true;
                g_onupdate_value++;
                break;
            }
        }
        while (deleted);
        g_onupdate_called = true;
    }
}

