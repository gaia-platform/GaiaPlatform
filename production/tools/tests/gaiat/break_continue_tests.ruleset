// TESTCASE: break to multiple labels
// GAIAPLAT-1074
ruleset test13
{
    OnUpdate(farmer)
    {
BREAK1_TARGET:
        for (I:incubator)
        {
BREAK2_TARGET:
            for (I->R:raised)
            {
BREAK3_TARGET:
                for (R->A:animal)
                {
BREAK4_TARGET:
                    for (A->F:feeding)
                    {
                        if (I.max_temp == 98.6)
                            break BREAK1_TARGET;
                        if (strcmp(R.birthdate, "") == 0)
                            break BREAK2_TARGET;
                        if (A.age == 3)
                            break BREAK3_TARGET;
                        if (F.portion <= 30)
                            break BREAK4_TARGET;
                    }
                }
            }
        }
    }
}

// TESTCASE: continue to multiple labels
// GAIAPLAT-1074
ruleset test14
{
    OnUpdate(farmer)
    {
CONTINUE1_TARGET:
        for (I:incubator)
        {
CONTINUE2_TARGET:
            for (I->R:raised)
            {
CONTINUE3_TARGET:
                for (R->A:animal)
                {
CONTINUE4_TARGET:
                    for (A->F:feeding)
                    {
                        if (I.max_temp == 98.6)
                            continue CONTINUE1_TARGET;
                        if (strcmp(R.birthdate, "") == 0)
                            continue CONTINUE2_TARGET;
                        if (A.age == 3)
                            continue CONTINUE3_TARGET;
                        if (F.portion <= 30)
                            continue CONTINUE4_TARGET;
                    }
                }
            }
        }
    }
}

// TESTCASE: deep combination if declarative for and if with break
ruleset test15
{
    OnUpdate(sensor)
    {
BREAK1_TARGET:
        if (incubator->raised->animal->feeding->yield->crop.acres == 15)
        {
            for (yield->F:feeding)
            {
                F.portion += 1;
                break BREAK1_TARGET;
            }
        }

        // Reverse the if and for statements.
BREAK2_TARGET:
        for (yield->F:feeding)
        {
            if (incubator->raised->animal->feeding->yield->crop.acres == 15)
            {
                F.portion += 1;
                break BREAK2_TARGET;
            }
        }
    }
}

// TESTCASE: break and continue to the same target
ruleset test16
{
    OnUpdate(sensor)
    {
BREAK_TARGET:
        if (incubator->raised->animal->feeding->yield->crop.acres == 15)
        {
            for (yield->F:feeding)
            {
                F.portion += 1;
                if (F.portion > 3)
                    break BREAK_TARGET;
                else
                    continue BREAK_TARGET;
            }
        }
    }
}
