// RUN: %gaiat %s -- 2>&1| FileCheck  %s

// TESTCASE: continue from a declarative statement
ruleset test18
{
    on_update(incubator)
    {
        for (/S:sensor)
        {
            if (S.value > 5)
            {
                continue;
            }
        }
    }
}

// CHECK: Use of non declarative continue in declarative statements may lead to unexpected results.
// GAIAPLAT-1083 (fixed)
